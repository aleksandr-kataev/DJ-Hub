{
  "name": "dj-hub",
  "version": "1.0.0",
  "description": "Social network for DJs to share their mixes",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --testTimeout=10000",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashagebert/DJ-Hub.git"
  },
  "keywords": [
    "React",
    "Node",
    "Heroku"
  ],
  "author": "Aleksandr Kataev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashagebert/DJ-Hub/issues"
  },
  "homepage": "https://github.com/sashagebert/DJ-Hub#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.10.2",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "26.1.0",
    "mongodb-memory-server": "^6.6.7",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
